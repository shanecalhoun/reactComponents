# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# newline ending every file
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

quote_type=single

# Indentation override for all JS, CSS, and LESS
[*/**.{js,css,less,html}]
indent_style = tab

# Since this file is auto-generated by Yarn and NPM,...
[package.json]
indent_style = tab
indent_size = 4


